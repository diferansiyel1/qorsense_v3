# QorSense Environment Configuration
# Copy this file to .env and update values for your environment

# ========================================
# Application Settings
# ========================================
APP_NAME="QorSense v1"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production

# ========================================
# Backend Settings
# ========================================
BACKEND_HOST="0.0.0.0"
BACKEND_PORT=8000
BACKEND_RELOAD=true  # Set to false in production

# ========================================
# Database Settings
# ========================================
DATABASE_URL="sqlite+aiosqlite:///./backend/qorsense.db"
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/qorsense
DATABASE_ECHO=false  # Set to true for SQL query logging
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ========================================
# CORS Settings
# ========================================
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://localhost:8501,http://127.0.0.1:3000,http://127.0.0.1:8501"
CORS_ALLOW_CREDENTIALS=true

# ========================================
# Security Settings
# ========================================
# Generate using: openssl rand -hex 32
SECRET_KEY="your-secret-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key for service-to-service auth (optional)
API_KEY=""

# ========================================
# Logging Settings
# ========================================
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json or text
LOG_FILE="backend/backend.log"
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ========================================
# Cache Settings (Optional - Redis)
# ========================================
REDIS_URL="redis://localhost:6379/0"
CACHE_ENABLED=false
CACHE_TTL=300  # seconds

# ========================================
# Analysis Settings
# ========================================
MAX_ANALYSIS_POINTS=10000
DEFAULT_WINDOW_SIZE=1000
ENABLE_BACKGROUND_ANALYSIS=true

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# ========================================
# Monitoring (Prometheus)
# ========================================
METRICS_ENABLED=false
METRICS_PORT=9090
